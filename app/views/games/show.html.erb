<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-7">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Game <%= @game.id %> Round <%= @game.round %> </h3>
      </div>
      <div class="panel-body">
        <p>
          <b>User:</b>
          <%= @game.user.username %>
        </p>

        <p>
          <b>Kills:</b>
          <%= @game.kill %>
        </p>

        <p>
          <b>Deaths:</b>
          <%= @game.deaths %>
        </p>

        <p>
          <b>Shots fired:</b>
          <%= @game.shots_fired %>
        </p>

        <p>
          <b>Shots hit:</b>
          <%= @game.shots_hit %>
        </p>

        <p>
          <b>Headshots:</b>
          <%= @game.headshots %>
        </p>

        <p>
          <b>Accuracy:</b>
          <%= @game.accuracy %>
        </p>
      </div>

      <div class="btn-group btn-group-xs">
        <%= link_to 'Edit', edit_game_path(@game), :class => "btn btn-default" %>
        <%= link_to 'Back', games_path, :class => "btn btn-default" %>
      </div>

    </div>
  </div>
</div>
