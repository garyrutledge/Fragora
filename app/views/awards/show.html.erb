
<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-7">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Award </h3>
      </div>
      <div class="panel-body">
        <p>
          <b>User:</b>
          <%= @award.user.username %>
        </p>

        <p>
          <b>Award type:</b>
          <%= @award.award_type.name %>
        </p>
      </div>

      <div class="btn-group btn-group-xs">
        <%= link_to 'Edit', edit_award_path(@award), :class => "btn btn-default" %>
        <%= link_to 'Back', awards_path, :class => "btn btn-default" %>
      </div>

    </div>
  </div>
</div>
