<div class="row">
  <div class="col-md-10">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Available Achievements</h3>
      </div>
      <table class="table">
        <tr>
          <th>Achievement ID</th>
          <th>Achievement Name</th>
          <th>Created</th>

        </tr>

        <% @award_types.each do |award_type| %>
            <tr>
              <td><%= link_to award_type.id, award_type %></td>
              <td><%= link_to award_type.name, award_type %></td>
              <td><%= link_to award_type.created_at.strftime("%d %b %Y"), award_type %></td>
              <td>
                <div class="btn-group btn-group-xs">
                  <%= link_to "Delete", award_type, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-default" %>
                </div>
              </td>
            </tr>
        <% end %>
      </table>
      <div class="btn-group btn-group-sm">
        <%= link_to "New" , new_award_type_path, :class => "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<br/>

